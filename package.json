{
	"name": "gateway-api-visualizer",
	"private": true,
	"version": "0.2.0",
	"description": "Visualize Kubernetes Gateway API resource coverage (Gateways -> Routes) from local YAML.",
	"type": "module",
	"packageManager": "pnpm@9.0.0",
	"scripts": {
		"dev": "vite",
		"build": "vite build && ./scripts/post-build.sh",
		"deploy": "vite build && ./scripts/post-build.sh",
		"preview": "vite preview",
		"lint": "eslint . --ext .ts,.svelte,.js",
		"format": "prettier --write .",
		"test": "vitest --run"
	},
	"dependencies": {
		"cytoscape": "^3.33.1",
		"js-yaml": "^4.1.0",
		"monaco-editor-core": "^0.54.0",
		"monaco-yaml": "^5.4.0",
		"svelte": "^5.40.2",
		"yaml-lint": "^1.7.0"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.14",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.8.1",
		"@typescript-eslint/eslint-plugin": "^8.46.0",
		"@typescript-eslint/parser": "^8.46.0",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.37.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"svelte-eslint-parser": "^1.3.3",
		"tailwindcss": "^4.1.16",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vitest": "^3.2.4"
	}
}
