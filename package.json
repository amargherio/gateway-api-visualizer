{
	"name": "gateway-api-visualizer",
	"private": true,
	"version": "0.1.0",
	"description": "Visualize Kubernetes Gateway API resource coverage (Gateways -> Routes) from local YAML.",
	"packageManager": "pnpm@9.0.0",
	"scripts": {
		"build": "pnpm -r run build",
		"dev": "pnpm --filter @gav/shared dev & pnpm --filter @gav/web dev",
		"lint": "eslint . --ext .ts,.svelte,.js",
		"format": "prettier --write .",
		"test": "vitest --run"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.5.0",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.3",
		"prettier": "^3.2.5",
		"svelte-eslint-parser": "^1.3.2",
		"typescript": "^5.6.3",
		"vitest": "^3.0.0"
	}
}
