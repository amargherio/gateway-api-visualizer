{
	"name": "gateway-api-visualizer",
	"private": true,
	"version": "0.1.0",
	"description": "Visualize Kubernetes Gateway API resource coverage (Gateways -> Routes) from local YAML.",
	"packageManager": "pnpm@9.0.0",
	"scripts": {
		"build": "pnpm -r run build",
		"dev": "pnpm --filter @gav/shared dev & pnpm --filter @gav/web dev",
		"lint": "eslint . --ext .ts,.svelte,.js",
		"format": "prettier --write .",
		"test": "vitest --run"
	},
	"devDependencies": {
		"@types/node": "^20.11.30",
			"@types/js-yaml": "^4.0.9",
		"eslint": "^8.57.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"eslint-config-prettier": "^9.0.0",
		"prettier": "^3.2.5",
		"typescript": "^5.4.0",
		"vitest": "^1.5.0"
	}
}
